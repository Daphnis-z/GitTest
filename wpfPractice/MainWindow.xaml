<Window x:Class="wpfPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="#FFFDFBFB" BorderThickness="0" BorderBrush="#FF0EEE18">
    
    <Window.Resources>
        <Style x:Key="{x:Type ResizeGrip}" TargetType="{x:Type ResizeGrip}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ResizeGrip}">
                        <Border BorderBrush="Yellow"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <TextBox x:Name="textBoxInput" HorizontalAlignment="Left" Height="23" Margin="163,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="labShow" Content="Daphnis" HorizontalAlignment="Left" Margin="163,116,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnShow" Content="Button" HorizontalAlignment="Left" Margin="236,122,0,0" VerticalAlignment="Top" Width="75" Click="btnShow_Click"/>
        <Button x:Name="btnSave" Content="Button" HorizontalAlignment="Left" Margin="303,50,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
    </Grid>
</Window>
